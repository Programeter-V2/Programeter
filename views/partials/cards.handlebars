<div class="card m-2 border border-white align-center" style="width: 18rem;">
  <div class="card-body bg-dark">
    <h5 class="card-title border-white text-white">{{user_name}}</h5>
          <a href="http://github.com/{{github_name}}"><i class="fa-brands fa-github fa-xl mx-auto"></i></a>
          <a href="mailto:{{email}}"><i class='fas fa-envelope fa-xl mx-auto'></i></a>
       <div class="row"> 
          <div class="col-6">
              <h6 class="card-subtitle mb-2 text-muted">Strengths</h6>
              <ul class="langlist col-6">
                  {{#each user_languages as |language|}}
                  <li class="text-white">{{language.language_name}}</li>
                  {{/each}}
              </ul>
          </div>
          <div class="col-6">
              <h6 class="card-subtitle mb-2 text-muted">Compability</h6>
              <ul class="text-white col-6">
                    <li>Personality: {{personal_compatibility}}</li>
                    <li>Professional: {{personal_compatibility}}</li>
                    <li>Technical: {{personal_compatibility}}</li>
              </ul>
          </div>
        </div>

  </div>
</div>